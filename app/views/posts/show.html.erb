<h2><%= @post.title %></h2>
<h3><%= @post.body %></h3>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to "Delete", post_path(@post), 
                        method: :delete, 
                        data: {confirm: 'are you sure?'},
                        :class => 'btn btn-default' %>